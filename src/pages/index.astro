---
import Menu from "../components/Menu.astro";
const Card = "div";
const Content = "div";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Portfolio</title>
  </head>
  <body>
    <Menu />
    <div class="absolute w-full min-h-screen">
      <div
        class="absolute z-0 top-0 w-full h-1/2 bg-cover bg-bottom pt-20 px-12 bg-gradient-to-r from-purple-500 to-pink-500"
      >
      </div>
    </div>
    <Card class="relative z-10 flex min-h-screen items-center justify-center">
      <Content
        class="relative z-20 bg-white md:flex p-12 shawdow-lg rounded-lg w-full max-w-4xl"
      >
        <div class="sm:flex flex-col py-1 md:pr-10">
          <h2 class="text-lg mb-3">Hello I'm</h2>
          <h1 class="text-5xl font-bold text-gray-800 mb-6">John Doe</h1>
          <p class="text-xl">
            I'm a passionate web developer with expertise in creating responsive
            and user-friendly websites. My skills include HTML, CSS, JavaScript,
            and modern frameworks like React and Vue.js. I love turning complex
            problems into simple, beautiful, and intuitive designs.
          </p>
        </div>
        <img
          src="images/user.jpg"
          alt="image"
          class="flex-shrink-0 w-80 rounded-full border-6 border-white shadow-2xl shadow-gray-600"
        />
      </Content>
    </Card>
  </body>
</html>
